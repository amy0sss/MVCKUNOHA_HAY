@model List<MVCKUNOHA_HAY.Models.Item>

@{
    ViewData["Title"] = "Index";
}
<h3>Index</h3>
<table class="table">
    <thread>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Options</th>
        </tr>
    </thread>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>